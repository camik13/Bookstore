@{
}

@model BooksViewModel

    <div style="text-align:center" class="bg-faded p-1">
        <h1>Book Store</h1>
    </div>
    <br />

    <div page-link="@Model.PageInfo" page-action="Index" page-classes-enabled="true" page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary" class="btn-group pull-right m-1"></div>

    @foreach (Book b in Model.Books)
    {
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h3>@b.Title</h3>
    </div>
    <div class="card-text p-1">
        <ul>
            <li>Book ID: @b.BookId</li>
            <li>Author: @b.Author</li>
            <li>Publisher: @b.Publisher</li>
            <li>ISBN: @b.Isbn</li>
            <li>Classification: @b.Classification</li>
            <li>Category: @b.Category</li>
            <li>Page Count: @b.PageCount pages</li>
            <li>Price: $@b.Price</li>
        </ul>
    </div>
</div>

        <br />

    }

    <div page-link="@Model.PageInfo" page-action="Index" page-classes-enabled="true" page-class="btn" page-class-normal="btn-outline-dark" page-class-selected="btn-primary" class="btn-group pull-right m-1"></div>




